{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off"
      },
      "suspicious": {
        "noConsoleLog": "error"
      },
      "nursery": {
        "noUnusedImports": "error",
        "useExportType": "error",
        "useImportType": "error",
        "useFilenamingConvention": "error"
      }
    },
    "ignore": ["node_modules/**/*", "dist/**/*", "web-build/**/*", ".expo/**/*"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["node_modules/**/*", "dist/**/*", "web-build/**/*", ".expo/**/*"]
  },
  "overrides": [
    {
      "include": ["src/app/**/*missing*", "src/app/**/+html.tsx"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "off"
          },
          "nursery": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
