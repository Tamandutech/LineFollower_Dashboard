{
  "name": "line-follower-dashboard",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "biome lint --apply-unsafe .",
    "format": "biome format --write .",
    "check": "biome check --apply-unsafe .",
    "check:ci": "biome ci .",
    "test:unit": "jest --watch --coverage=false",
    "test:unit:ci": "jest --ci",
    "test:badges": "npm run test:ci  && jest-coverage-badges --input coverage/coverage-summary.json --output __badges__",
    "prepare": "husky install"
  },
  "dependencies": {
    "@expo-google-fonts/lato": "^0.2.3",
    "@gluestack-style/react": "^1.0.30",
    "@gluestack-ui/config": "^1.0.10",
    "@gluestack-ui/themed": "^1.0.33",
    "@react-navigation/native": "^6.0.2",
    "expo": "~49.0.15",
    "expo-font": "~11.4.0",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-system-ui": "~2.4.0",
    "expo-web-browser": "~12.3.2",
    "lucide-react-native": "^0.303.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
