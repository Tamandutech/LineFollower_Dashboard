    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "~18.2.14",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-expo": "^49.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
  "overrides": {
    "react-refresh": "~0.14.0"
